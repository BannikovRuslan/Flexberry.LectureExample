<h3 class="ui header">{{t "forms.i-i-s-lecture-example-order-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field" data-test-i-i-s-lecture-example-order-e-status="true">
    <label>{{t "forms.i-i-s-lecture-example-order-e.status-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-lecture-example-order-status")
      value=model.status
      class=(if (v-get validationModel "status" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "status" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-lecture-example-order-e.shipmentDate-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.shipmentDate
      class=(if (v-get validationModel "shipmentDate" "isInvalid") "error")
      data-test-i-i-s-lecture-example-order-e-shipmentDate=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "shipmentDate" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-lecture-example-order-e.paymentDay-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.paymentDay
      class=(if (v-get validationModel "paymentDay" "isInvalid") "error")
      data-test-i-i-s-lecture-example-order-e-paymentDay=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "paymentDay" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.totalSum
      class=(if (v-get validationModel "totalSum" "isInvalid") "error")
      label=(t "forms.i-i-s-lecture-example-order-e.totalSum-caption")
      data-test-i-i-s-lecture-example-order-e-totalSum=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "totalSum" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-lecture-example-order-e.orderItem-caption"}}</label>
    {{flexberry-groupedit
      componentName="orderItemGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.orderItem
      content=model.orderItem
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "orderItem" "isInvalid") "error")
      data-test-i-i-s-lecture-example-order-e-orderItem=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "orderItem" "message")}}
  </div>
</form>
